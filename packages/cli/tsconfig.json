{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2020",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.proxy",
      "es2015",
      "es2016.array.include",
      "ES2020"
    ],
    "noEmit": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "allowJs": true
  }
}