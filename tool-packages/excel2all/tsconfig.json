{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.proxy",
      "es2015",
      "es2016.array.include"
    ],
    "sourceMap": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false
  },
  "exclude": [
    "dist"
  ]
}