{
  "name": "easygameclientframework",
  "description": "base typescript a EasyGameClientFramework ",
  "repository": "https://github.com/AILHC/EasyGameFrameworkOpen.git",
  "author": "Tide Li <505126057@qq.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "transed-packages/*"
  ],
  "packages": [
    "packages/*",
    "examples/*",
    "transed-packages/*"
  ],
  "scripts": {
    "vcnp": "#梳理版本不推送 \n lerna version --conventional-commits --no-push --git-remote github --force-git-tag",
    "vc":"#梳理版本推送 \n lerna version --conventional-commits --git-remote github --force-git-tag",

    "ba":"#构建 \n lerna exec --concurrency 2 --no-private --include-dependencies --no-bail --stream -- yarn build:all",
    "pa":"#发布npm包 \n lerna exec --concurrency 2 --no-private --parallel --no-bail --stream -- npm publish",
    "bootstrap": "lerna bootstrap",
    "clean_nm": "# 清理node_modules \n lerna clean",
    "cm": "git-cz",
    "preinstall": "#检查是否安装yarn \n node ./scripts/checkYarn.js",
    "gcl": "#生成changelog \n lerna exec --concurrency 1 --stream -- conventional-changelog --preset angular --release-count 0 --commit-path ^%CD^% --pkg ^%CD^%/package.json --outfile ^%CD^%/CHANGELOG.md --lerna-package ^%LERNA_PACKAGE_NAME^%",
    "gapi": "#生成api文档 \n rimraf docs/api && typedoc --options tools/typedoc/typedoc.js",
    "cpdoc":"#复制文档 \n node ./scripts/copyDocs.js",
    "tc": "#测试并生成测试覆盖率 \n jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "cpr": "^3.0.1",
    "cross-var": "^1.1.0",
    "make-dir-cli": "^2.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.3",
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@oasis-engine/typedoc-theme": "^0.0.2",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typedoc": "0.19.2",
    "typedoc-plugin-remove-references": "^0.0.5",
    "@ailhc/egf-cli":"^1.0.4"
  }
}