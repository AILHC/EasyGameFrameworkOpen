{
    "files.exclude": {
        ".git": true,
        "/node_modules": true,
        ".github": false
    },
    "search.exclude": {
        ".git": true,
        "node_modules": true,
        ".github": true,
        "bin": true
    },
    "clang-format.style": "google",
    "eslint.validate": [
        "javascript",
        {
            "language": "typescript",
            "autoFix": true
        },
    ],
    "eslint.workingDirectories": [
        "./packages/core"
    ],
    "eslint.run": "onSave",
    "eslint.format.enable": true,
    "eslint.packageManager": "yarn",
    "liveServer.settings.port": 5501,
    "export-typescript.excludes": [
        "*.{spec.ts,spec.tsx}"
    ],
    "export-typescript.includes": [
        "*.{ts,tsx}"
    ],
    "export-typescript.exportStar": true
}